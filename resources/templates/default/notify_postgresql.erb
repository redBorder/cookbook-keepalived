#!/bin/bash

IP_VIRTUAL=<%= @vip %>
IFACE=<%= @iface %> 
KEEPALIVED_CONF="/etc/keepalived/keepalived.conf"
LOG_FILE="/var/log/rb_notify_master_postgresql.log"

# Function for logging
log() {
  echo "$(date '+%Y-%m-%d %H:%M:%S') $1" | tee -a "$LOG_FILE"
}

log "Entering rb_notify_master_postgresql script with VIP: $IP_VIRTUAL"

################################
# checking status section
################################

grep "vrrp_sync_group vg_${IP_VIRTUAL}_postgresql {" $KEEPALIVED_CONF > /dev/null

if [ $? -eq 0 ]; then
  log "The virtual IP $IP_VIRTUAL is registered in the vrrp_sync_group."
else
  log "Error: The virtual IP $IP_VIRTUAL is not registered in vrrp_sync_group."
  exit 1
fi

SERF_OUTPUT=$(serf members -format=json -status=alive)
MEMBER_COUNT=$(echo "$SERF_OUTPUT" | jq '.members | length')

if [ "$MEMBER_COUNT" -gt 1 ]; then
  log "The cluster has $MEMBER_COUNT members so is OK."
else
  log "Error: There is only $MEMBER_COUNT member."
  exit 1
fi

if ip link show $IFACE | grep -q "state UP"; then
  log "The interface $IFACE is UP."
else
  log "The interface $IFACE is DOWN."
  exit 1
fi

################################
# postgresql section
################################

sudo -u postgres psql -h 127.0.0.1 -c "select 1;" &>/dev/null
if [ $? -eq 0 ]; then
  log "PostgreSQL connection is successful."
else
  log "Failed to connect to PostgreSQL."
  exit 1
fi

IS_RECOVERY=$(sudo -u postgres psql -h 127.0.0.1 -t -c "SELECT pg_is_in_recovery();" 2>/dev/null | tr -d ' \t\n\r')
CURRENT_NODE=$(hostname -s)

if [ "x$IS_RECOVERY" == "xt" ]; then
  log "The database is in recovery mode (Read-Only) on $CURRENT_NODE. Sleeping for 30 sec..."
  sleep 30
  touch /tmp/postgresql.trigger
  sed -i '/^primary_conninfo/d' /var/lib/pgsql/data/postgresql.conf
  sed -i '/^promote_trigger_file/d' /var/lib/pgsql/data/postgresql.conf
else
  log "The database is not in recovery mode (Read-Write) on $CURRENT_NODE."
  rb_sync_from_master.sh $CURRENT_NODE

  if [ $? -ne 0 ]; then
    log "rb_sync_from_master.sh failed."
    exit 1
  fi
fi
